{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Dev Server (Turbopack)",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [
				"$tsc"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Dev Server (Regular)",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev:regular"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"label": "Build",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"build"
			],
			"group": "build",
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"label": "Build with Analysis",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"build:analyze"
			],
			"group": "build",
			"problemMatcher": [
				"$tsc"
			]
		}
	]
}